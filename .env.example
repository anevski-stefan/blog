# Database Configuration
# PostgreSQL connection URL for Prisma
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://user:password@localhost:5432/blog?schema=public"

# Direct database URL (for migrations and connection pooling)
# Same format as DATABASE_URL, can be the same value for local development
DIRECT_URL="postgresql://user:password@localhost:5432/blog?schema=public"

# Supabase (Auth/session via @supabase/ssr)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"

# Admin access (single-admin model)
# Only the user whose Supabase email matches this value can access /admin/*
ADMIN_EMAIL="you@example.com"

# UploadThing (Image Upload Service)
# Get your token from: https://uploadthing.com/dashboard
# Sign up at https://uploadthing.com and create an app to get your token
UPLOADTHING_TOKEN="your-uploadthing-token-here"

# Application Configuration
# Base URL for the application (used for metadata, OG images, etc.)
# Local development
NEXT_PUBLIC_APP_URL="http://localhost:3001"
# Production example
# NEXT_PUBLIC_APP_URL="https://yourdomain.com"

# Node Environment
NODE_ENV="development"
