<div class="detail-wrapper mt-5">
  <div
    class="left-container d-flex align-items-center justify-content-between w-100"
  >
    <div>
      <div>
        <h1 class="fs-1 title"><%= blog.title %></h1>
        <div class="actions">
          <form method="get" action="/blogs/<%= blog.id %>/remove">
            <button type="submit" class="btn btn-danger">
              <i class="fa fa-trash" aria-hidden="true"></i>
            </button>
          </form>
          <form method="get" action="/blogs/<%= blog.id %>/edit-form">
            <button type="submit" class="btn btn-primary">
              <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
            </button>
          </form>
        </div>
      </div>
      <p class="m-0">
        <span class="timestamp" data-createdAt="<%= blog.createdat %>"></span>
      </p>
    </div>
  </div>

  <div class="right-container mt-3"><%- blog.content %></div>
</div>
