<div class="container mt-5">
  <% if (messages.addedUser.length > 0) { %>
  <div class="alert alert-success my-5 text-center" role="alert">
    <%= messages.addedUser %>
  </div>
  <% } %> <% if (messages.removeUser.length > 0) { %>
  <div class="alert alert-danger my-5 text-center" role="alert">
    <%= messages.removeUser %>
  </div>
  <% } %>
  <div class="table-container">
    <h1 class="text-center">All users</h1>
    <div class="table-responsive">
      <% if (users.length > 0) { %>
      <table class="table table-responsive w-100">
        <thead class="table-header">
          <tr>
            <th scope="col">ID</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Username</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(user => { %>
          <tr class="user-row">
            <td><%= user.id %></td>
            <td><%= user.firstname %></td>
            <td><%= user.lastname %></td>
            <td><%= user.username %></td>
            <td>
              <a class="btn btn-danger" href="/admin/<%= user.id %>/deleteuser">
                <i class="fa fa-trash" aria-hidden="true"></i>
              </a>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <% }else { %>
      <p class="text-center">No users to be shown.</p>
      <% } %>
    </div>
  </div>
</div>
