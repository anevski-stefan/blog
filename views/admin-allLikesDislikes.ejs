<div class="container mt-5">
  <% if (messages.addedLike.length > 0) { %>
  <div class="alert alert-success my-5 text-center" role="alert">
    <%= messages.addedLike %>
  </div>
  <% } %> <% if (messages.addedDislike.length > 0) { %>
  <div class="alert alert-success my-5 text-center" role="alert">
    <%= messages.addedDislike %>
  </div>
  <% } %>
  <div class="table-container">
    <h1 class="text-center">Blog Reactions</h1>
    <div class="table-responsive">
      <% if (reactions.length > 0) { %>
      <table class="table">
        <thead class="table-header">
          <tr>
            <th scope="col">Blog Title</th>
            <th scope="col">Username</th>
            <th scope="col">Reaction</th>
          </tr>
        </thead>
        <tbody>
          <% reactions.forEach(reaction => { %>
          <tr class="reaction-row">
            <td>#<%= reaction.blog_id %> - <%= reaction.blog_title %></td>
            <td><%= reaction.username %></td>
            <td><%= reaction.reaction %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <% } else { %>
      <p class="text-center">No reactions to be shown.</p>
      <% } %>
    </div>
  </div>
</div>
