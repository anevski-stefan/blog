<div class="container mt-5">
  <% if (messages.deleted.length > 0) { %>
  <div class="alert alert-danger my-5 text-center" role="alert">
    <%= messages.deleted %>
  </div>
  <% } %> <% if (messages.addedCat.length > 0) { %>
  <div class="alert alert-success my-5 text-center" role="alert">
    <%= messages.addedCat %>
  </div>
  <% } %> <% if (messages.editedCat.length > 0) { %>
  <div class="alert alert-success my-5 text-center" role="alert">
    <%= messages.editedCat %>
  </div>
  <% } %>
  <div class="table-container">
    <h1 class="text-center">All categories</h1>
    <div class="table-responsive">
      <% if (categories.length > 0) { %>
      <table class="table">
        <thead class="table-header">
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Name</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% categories.forEach(category => { %>
          <tr class="blog-row">
            <td><%= category.id %></td>
            <td><%= category.name %></td>
            <td>
              <a
                class="btn btn-primary"
                href="/admin/categories/<%= category.id %>/editPage"
              >
                <i class="fa fa-pencil" aria-hidden="true"></i>
              </a>
              <a
                class="btn btn-danger"
                href="/admin/categories/<%= category.id %>/delete"
              >
                <i class="fa fa-trash" aria-hidden="true"></i>
              </a>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <% }else { %>
      <p>No categories to be shown.</p>
      <% } %>
    </div>
    <a class="btn btn-primary" href="/admin/addCategory">Add category</a>
  </div>
</div>
