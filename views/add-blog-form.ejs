<h1 class="text-center m-5">Add blog</h1>
<form method="post" action="/blogs/add">
  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input type="text" class="form-control" id="title" name="title" />
  </div>
  <div class="mb-3">
    <label for="content" class="form-label">Content</label>
    <textarea
      name="content"
      class="form-control"
      id="content"
      cols="30"
      rows="10"
    ></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Add</button>
  <a href="/blogs" class="btn btn-danger">Cancel</a>
</form>
<script src="/ckeditor/ckeditor.js"></script>
<script src="/ckeditor/plugins/higlight/es/highlight.js"></script>
<link
  rel="stylesheet"
  href="../public/ckeditor/plugins/higlight/styles/monokai.min.css"
/>
<script>
  CKEDITOR.replace("content", {
    allowedContent: true,
    autoParagraph: false,
    extraPlugins:
      "codesnippet,ajax,autogrow,zoom,richcombo,floatpanel,panel,listblock,button,emoji,autocomplete,textwatcher,textmatch",
    codeSnippet_theme: "monokai",
  });
</script>
