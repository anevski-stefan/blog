<div class="blogs">
  <h1 class="fs-1">My Blogs</h1>

  <% blogs.forEach(blog => { %>
  <div class="blog-item">
    <p><b>Title: </b><%= blog.title %></p>
    <p><b>Content: </b><%= blog.content %></p>
    <p>
      <b>Created: </b>
      <span class="timestamp" data-createdAt="<%= blog.createdat %>"></span>
    </p>
    <div class="actions mt-3">
      <form method="get" action="/blogs/<%= blog.id %>/remove">
        <button type="submit" class="btn btn-danger">Delete post</button>
      </form>
      <form method="get" action="/blogs/<%= blog.id %>/edit-form">
        <button type="submit" class="btn btn-primary">Edit post</button>
      </form>
      <a href="/blogs/<%= blog.id %>" class="btn btn-secondary">Read more</a>
    </div>
  </div>
  <% }); %>
</div>
